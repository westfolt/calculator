        <Button x:Name="PlusButton" Content="+" HorizontalAlignment="Left" Margin="247,311,0,0" VerticalAlignment="Top" Width="70" Height="70" FontSize="36" Click="ActionButton_Click"/>
        <Button x:Name="CancelButton" Content="C" HorizontalAlignment="Left" Margin="247,86,0,0" VerticalAlignment="Top" Width="145" Height="70" FontSize="36" Click="CancelButton_Click"/>

    </Grid>
